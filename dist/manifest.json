{
    "manifest_version": 2,
    "name": "BOJ Comment",
    "author": "riyenas0925",
    "description": "Baekjoon Online Judge problem auto comments generator",
    "homepage_url": "https://github.com/riyenas0925/BOJ_Comment_TypeScript",
    "version": "1.0.0",

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "icons": {
        "128": "icon.png"
    },

    "browser_action": {
        "default_title": "Title",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": ["tabs", "activeTab", "storage"]
}
